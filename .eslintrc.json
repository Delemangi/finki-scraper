{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": [
    "canonical/auto"
  ],
  "overrides": [
    {
      "extends": [
        "canonical/module",
        "canonical/typescript-type-checking"
      ],
      "files": "*.ts",
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "rules": {
        "prettier/prettier": [
          "error",
          {
            "endOfLine": "crlf"
          }
        ]
      }
    }
  ]
}
